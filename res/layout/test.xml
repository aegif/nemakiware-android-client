<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:gravity="center_vertical|center_horizontal" android:layout_height="100sp">
	    <TextView
	    	android:id="@+id/app_name"
	        android:text="@string/app_name"
	        android:textSize="30sp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        />
	<ImageButton></ImageButton>
</LinearLayout>
    
	<TableLayout  xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:stretchColumns="1"
		>
		<TableRow android:clickable="true" android:padding="10sp">
		<ImageView
		   android:id="@+id/repository"
	       android:src="@drawable/repository" 
	       android:layout_height="fill_parent" 
	       android:layout_width="wrap_content"/>
	       
	       <TextView 
	       	android:text="Gestion des Repertoires" 
	       	android:id="@+id/TextView03" 
	       	android:layout_height="fill_parent" 
	       	android:layout_width="wrap_content"/>
	       
	       
	    </TableRow>
	    <TableRow>
	    <ImageView
		   android:id="@+id/favorites"
	       android:src="@drawable/favorites" 
	       android:layout_height="fill_parent" 
	       android:layout_width="wrap_content"/>
	       
	       <TextView 
	       	android:text="Gestion des Favoris" 
	       	android:id="@+id/TextView02" 
	       	android:layout_height="fill_parent" 
	       	android:layout_width="wrap_content" 
	       	android:layout_gravity="center_vertical"/>
	       
	       
	       </TableRow>
	       <TableRow>
	   <ImageView
	   	   android:id="@+id/about"
	       android:layout_width="wrap_content"
	       android:src="@drawable/cmisexplorer"
	       android:layout_height="fill_parent"
	       android:clickable="true"
	       />
	       
	       <TextView 
	       	android:text="A Propos" 
	       	android:id="@+id/TextView02" 
	       	android:layout_height="fill_parent" 
	       	android:layout_width="wrap_content" 
	       	android:layout_gravity="center_vertical"/>
</TableRow>
	</TableLayout>

</LinearLayout>
