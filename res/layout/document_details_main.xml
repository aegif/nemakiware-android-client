<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   >

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_weight="1"
		android:layout_height="0px"
		>
		
		<ListView 
			xmlns:android="http://schemas.android.com/apk/res/android" 
			android:id="@+id/android:list" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			/>
			
		<TextView android:id="@+id/android:empty"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:textSize="20sp" 
			android:text="No data!" />
		
	</LinearLayout>
	
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="1sp"
		android:background="#ffffff"
		/>
	
	<HorizontalScrollView 
        android:id="@+id/my_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" 
		>

            <LinearLayout android:id="@+id/my_layout"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent" android:layout_gravity="bottom|center_horizontal">

            <Button
				android:id="@+id/download"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/download"
				android:clickable="true"
				android:text="Download"
				android:layout_marginRight="20dip"
				android:layout_width="fill_parent" android:textSize="12sp" android:width="80dip"/>
				
			<Button
				android:id="@+id/share"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/share"
				android:clickable="true"
				android:text="Share"
				android:layout_marginRight="20dip"
				android:layout_width="fill_parent" android:textSize="12sp" android:width="80dip"/>
				
			<Button
				android:id="@+id/editmetadata"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/editmetada"
				android:clickable="false"
				android:text="Edit"
				android:layout_marginRight="20dip"
				android:layout_width="fill_parent" android:textSize="12sp" android:width="80dip"/>
				
			<Button
				android:id="@+id/delete"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/delete"
				android:clickable="false"
				android:text="Delete"
				android:layout_marginRight="20dip"
				android:layout_width="fill_parent" android:textSize="12sp" android:width="80dip"/>

        </LinearLayout>
	</HorizontalScrollView>
</LinearLayout>