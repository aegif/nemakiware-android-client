<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   >
   
   <HorizontalScrollView 
        android:id="@+id/my_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scrollbars="none" 
		>

            <LinearLayout android:id="@+id/my_layout"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content" 
                    >

			 <Button
				android:id="@+id/view"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/phone_m"
				android:clickable="true"
				android:text="@string/view"
				android:layout_marginRight="3dip"
				android:layout_width="fill_parent" 
				android:textSize="8sp" />
				
			<Button
				android:id="@+id/openwith"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/open_with"
				android:clickable="true"
				android:text="@string/open_with"
				android:layout_marginRight="3dip"
				android:layout_width="fill_parent" 
				android:textSize="8sp" />


            <Button
				android:id="@+id/download"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/download"
				android:clickable="true"
				android:text="@string/download"
				android:layout_marginRight="3dip"
				android:layout_width="fill_parent" 
				android:textSize="8sp" />
				
			<Button
				android:id="@+id/share"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/share"
				android:clickable="true"
				android:text="@string/share"
				android:layout_marginRight="3dip"
				android:layout_width="wrap_content" 
				android:textSize="8sp" />
				
			<Button
				android:id="@+id/editmetadata"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/editmetada"
				android:clickable="true"
				android:text="@string/edit"
				android:layout_marginRight="3dip"
				android:layout_width="wrap_content" 
				android:textSize="8sp" />
				
			<Button
				android:id="@+id/delete"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/delete"
				android:clickable="false"
				android:text="@string/delete"
				android:layout_marginRight="3dip"
				android:layout_width="wrap_content" 
				android:textSize="8sp" />
				
			<Button
				android:id="@+id/qrcode"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/qrcode"
				android:clickable="true"
				android:text="@string/qrcode"
				android:layout_marginRight="3dip"
				android:layout_width="wrap_content" 
				android:textSize="8sp" />
				
			<Button
				android:id="@+id/filter"
				android:drawableTop="@drawable/filter_m"
				android:clickable="true"
				android:text="@string/menu_item_filter"
				android:layout_width="wrap_content" 
				android:textSize="8sp" 
				android:layout_height="wrap_content"/>

        </LinearLayout>
	</HorizontalScrollView>
   
   	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="1sp"
		android:background="#ffffff"
		/>

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_weight="1"
		android:layout_height="0px"
		>
		
		<ListView 
			xmlns:android="http://schemas.android.com/apk/res/android" 
			android:id="@+id/android:list" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			/>
			
		<TextView
		    android:id="@+id/empty"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:text="@string/no_properties"
		    android:visibility="gone"
		    />
		
	</LinearLayout>
	
</LinearLayout>